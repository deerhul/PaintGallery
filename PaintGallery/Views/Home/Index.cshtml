@*<div class="jumbotron">*@
    <h1 id="header">Alchelle's Gallery</h1>

    <div id="mycarousel" class="carousel slide" data-wrap="true" data-ride="carousel" style="margin: 5px 10px">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            @*<li data-target="#mycarousel" data-slide-to="0" class="active"></li>
            <li data-target="#mycarousel" data-slide-to="1"></li>
            <li data-target="#mycarousel" data-slide-to="2"></li>*@

            @{ for (int a = 0; a < Model.Count; a++)
                {
                    var active1 = a == 0 ? "active" : "";
                    <li data-target="#mycarousel" data-slide-to=@a class="@active1"></li>
                }
            }

        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">

            @{ int i = 0;}
            @foreach (var item in Model)
            {
                i++;
                var active2 = i == 1 ? "active" : "";
                <div class="item @active2">
                    <img src="@Url.Content(item.ImageURL)" id="images" />
                    <div class="carousel-caption">
                        <p id="titleAuthor"><b>"@item.Name"</b> By @item.author </p>
                    </div>
                </div>
            }


